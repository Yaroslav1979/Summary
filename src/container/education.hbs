                {{/each }}
            </ul>            
        </div>    
        
        <div class="card card-body col-5 me-3 text-bg-secondary">
            {{>title data="My certificates"}}
            <ul>
                {{#each certificate}}
                    <li> 
                        {{name}} ({{id}}) 
                    </li>
                {{/each}}
            </ul>
