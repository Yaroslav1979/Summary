{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


 <main>
{{#with main}}
   
        
      
        <div class="row ">
        <div class="card card-body col-5 me-3 text-bg-primary">
        {{>title data="All skills" big=true}}
          <ul>
            {{#each skills}}
            <li> 
                {{name}} 

                {{#if point includeZero=true}} ({{point}}) {{/if}}

                {{#if isTop}} (top) {{/if}}

                {{#unless point includeZero=true}} 
                (не вивчаємо) 
                {{/unless}}

                {{#unless point}} 
                    {{#if point includeZero=true}}
                    (зараз вивчаємо)
                {{/if}}
                {{/unless}}
            </li>
            {{/each}}
            </ul>
        </div>
        <div class="card card-body col-5 ms-3 text-bg-secondary">
             {{>title data="My hobbies"}}
            <ol>
                {{#each hobbies}}
                    <li> 
                        {{name}}
                         {{#if isMain}} (favorite) {{/if}} 
                    </li>
                {{/each}}
            </ol>
        </div>
       
       {{/with}}
    </main>
  

