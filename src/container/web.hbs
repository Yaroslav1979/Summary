{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

    <main>
            {{>nav}}
                {{#with web}}
                <div class="display-2 text-center">
                <p>Web languages</p>
                </div>
                <div class="row">

                 {{#each languages}}
                 
                 <div class="card col-4 p-3">
                    <div class="card-header text-bg-primary">
                        <h2> {{name}} </h2>
                    </div>
                    <div class="card-body text-bg-warning">
                   <Ol> 
                    <li> <p> version: <b> {{version}}</b></p></li>
                    <li> <p> description: <b> {{description}}</b></p></li>
                    <li> 
                        {{#if elements}}  <p> elements: </p>  
                         {{#each elements}}                         
                            <p> name: <b>{{name}} </b><br>
                             description: {{description}} <br>
                             attributes: {{#each attributes}}
                             <ul>
                                <li> 
                                name: {{name}}<br>
                                description: {{description}}
                                </li>
                             </ul>
                             {{/each}}
                            </p>
                        {{/each}}
                        {{/if}}
                    {{#if properties}} <p> properties: </p>
                    {{#each properties}} 
                            <p> name: <b>{{name}} </b><br>
                             description: {{description}} <br>
                             values: 
                             {{#each values}}
                             <ul>
                                <li> 
                                value: {{value}}<br>
                                description: {{description}}
                                </li>
                             </ul>
                             {{/each}}
                            </p>
                        {{/each}}
                    {{/if}}
                    {{#if functions}} <p> functions: </p>
                    {{#each functions}}                         
                            <p> name: <b>{{name}} </b><br>
                             description: {{description}} <br>
                             values: {{#each parameters}}
                             <ul>
                                <li> 
                                name: {{name}}<br>
                                type: {{name}}<br>
                                description: {{description}}
                                </li>
                             </ul>
                             {{/each}}
                            </p>
                        {{/each}}
                    {{/if}}
                    </li>
                 </Ol>
                 </div>
                 </div>
                 {{/each}}
                 </div>
                {{/with}}
            
    </main>
  
