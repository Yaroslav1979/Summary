{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

   {{#with main}}
    <main>
      
        <section>
            <div class="card card-header">
            {{>title data="Work history"}}
            </div>
            <div class="card card-body my-4">
                <ul >
                    {{#each works}}
                     <li>
                         <div> <h4> {{position}} </h4></div> 
                         
                         <br>

                         <div class=""> 
                            {{duration.form}} - 
                             {{#if duration.to}} {{duration.to}} 
                             {{else}} (Працюю понині)
                             {{/if}} 
                        </div> 
                         <br>
                         <div>
                            {{#if company.url}}Company: {{>link text=company.name href=company.url blank=true noLine=true}} 
                            {{/if}}                                                  
                            {{#unless company.url}} <big> Company: </big><b>{{company.name}}</b> 
                            {{/unless}}
                        </div> 
                        <br>
                        <h5> 
                         Project ({{projectAmount}}):
                        </h5>
                        <br>
                        <ul>
                            {{#each projects}}
                            <li>
                                <div>  {{>link text=name href=url blank=true noLine=true}} </div>
                                </if>  
                                <br> 
                                <div > <p class="display-6">{{about}}</p></div>
                                <br>
                                <div class="row">
                                <div class="card card-body text-bg-secondary col-4 mx-3"> 
                                    <em> {{nameStacks}} ({{stacksAmount}})</em>
                                
                                <br>
                                <ul >
                                    {{#each stacks}}
                                        <li>
                                        <div> 
                                            <p>{{name}}</p>
                                        </div>
                                        </li>
                                    {{/each}}
                                </ul>
                                </div>
                                <br>
                                <div class="card card-body text-bg-secondary col-4 mx-3"> 
                                    <em> {{nameAwards}} ({{awardsAmount}})</em>
                                
                                <br>
                                <ul>
                                    {{#each awards}}
                                        <li>
                                        <div> 
                                            <p>{{name}}</p>
                                        </div>
                                        </li>
                                    {{/each}}
                                </ul>
                                </div>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                     </li>
                     {{/each}}
                </ul>
            </div>
        </section>            
    </main>
    {{/with}}
   </div> 

  
