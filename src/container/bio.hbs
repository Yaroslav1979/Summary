{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

    <main>
          {{>nav}}
            <div class=" card text-bg-success p-4 text-center">
                <h1> {{name}} </h1>
            </div>
            <hr>
            <div class="row">
                <div class="card card-body col-8 m-2 ">
            <p> <b>Birthdate:</b> {{birthdate}}, {{birthplace}}</p>
            <p> <b>Deathdate:</b> {{deathdate}}, {{deathplace}} </p>
            <p> <b>Nationality:</b> {{nationality}} </p>        
            <p> <b>Occupation:</b> {{occupation}} </p>
             </div>           
            
                
                <div class="card card-body col-3 m-2 text-end text-bg-info ">
                    <h3> Known_for: </h3>              
                    
                        {{#each known_for}}
                        <em> {{''}} </em>
                        {{/each}}
                                   
                </div>
            </div>
            <hr>
            <div class="card card-body text-bg-secondary">
            <h3>Education:</h3>
                <ul>
                     {{#each education}}
                    <li> Degree: {{degree}} </li>
                    <li> Field: {{field}} </li>
                    <li> Institution: {{institution}} </li>
                    <li> Year: {{degree}} </li>
                    {{/each}}
                </ul> 
                     <h3>Notable publications:</h3> 
                     <ol>
                        {{#each notable_publications}}
                    <li> <em> {{title}}, {{year}}. Publisher: {{publisher}}</em></li>
                    {{/each}}
                     </ol>
                    <h3>Partners:</h3>
                       <ol>
                        {{#each partners}}
                    <li> <em> {{name}}, Relationship: {{relationship}}. {{years}}</em></li>
                    {{/each}}
                     </ol>
                     <h3>Awards:</h3>
                       <ul>
                        {{#each awards}}
                    <li> <em> {{title}}, {{year}}. {{description}}</em></li>
                    {{/each}}
                     </ul>

                     <h3>Influences:</h3>
                     <ol>
                        {{#each influences}}
                    <li> <em> {{.}} </em></li>
                    {{/each}}
                     </ol>

                     <h3>Influenced:</h3>
                     <ol>
                        {{#each influenced}}
                    <li> <em> {{.}} </em></li>
                    {{/each}}
                     </ol>

                     <h3>Quotes:</h3>
                     <ol>
                        {{#each quotes}}
                    <li> <em> {{.}} </em></li>
                    {{/each}}
                     </ol>
                     <h3>Major discoveries:</h3>
                     <ul>
                        {{#each major_discoveries}}
                    <li> <em> {{title}}, {{year}}. {{description}}</em></li>
                    {{/each}}
                     </ul>

                      <h3>Contributions:</h3>
                   <p>
                      {{#with contributions}}
                     Title: <em> {{title}} </em> <br>
                    Description: <em> {{description}}</em><br>
                    Year: <em> {{ year}} </em><br>
                    Field: <em> {{field}} </em><br>
                    {{/with}}
                    </p>
                    </div>                   
         </main>
  
