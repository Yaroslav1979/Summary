<main> 
  <div>
    {{#with header}}
    <h1>{{title}} </h1>
    <a href={{button.link}} target="_blank">
        <button class="btn btn-outline-secondary m-2">{{button.text}}</button>  
        </a> 
    {{/with}}
  </div> 
  <br> <hr>

  {{>cartGoodsItem}}
<br><hr>

{{#with goodsOtherBlock}}

<h3 class="text-center">{{title}}</h3>

{{>shopcard}}

{{/with}}

<div>
  {{#with total}}
  <h3>{{title}} </h3>
  <h4>{{amount}} </h4>
  <p>{{delivery}} </p>
   {{#each buttons}}
        {{#if isSuccess}}
         <button class="btn btn-success m-2">{{text}}</button>
        {{/if}}
        {{#if isOutline}}
         <button class="btn btn-outline-success m-2">{{text}}</button>
        {{/if}}
      {{/each}} 

  {{/with}}

</div>

<br><hr>
  <div>
    <br>
    <div class='card row'>
        <div class='card-body text-bg-dark'>
        {{#with subscribe}}
         <h2>{{header}} </h2>
         <p>{{description}} </p>      
          {{#each buttons}}           
           <a href={{link}} class="list-item" target="_blank">
                <button class="btn btn-primary m-2">{{text}}</button> <br> 
            </a>            
          {{/each}} 
    {{/with}}
    </div>
    </div>
  </div>
<br><hr> <br>


<br>
</main>